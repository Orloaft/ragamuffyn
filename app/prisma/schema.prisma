generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model character {
  id      Int     @id @default(autoincrement())
  name    String?
  race    String?
  class   String?
  level   Int?
}

model npc {
    id      Int     @id @default(autoincrement())
  name    String?
  race    String?
  bio     String?
}

model item {
   id      Int     @id @default(autoincrement())
  name    String?
  description  String?
  icon    String?
}

model campaign {
   id      Int     @id @default(autoincrement())
  name    String?
  data    String?
}